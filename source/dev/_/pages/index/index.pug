extends ../../templates/default
block vars
	-
		title = "Пиломир"

block content
	.side-panel
		.side-panel__wrap
			.side-panel__list
				a.side-panel__item(data-fancybox data-src="#modal-price" href="javascript:;")
					.side-panel__icon
						img(src="_/uploads/icons/calc.svg", alt="")
					.side-panel__text Рассчитать стоимость
				a.side-panel__item(data-fancybox data-src="#modal-consult" href="javascript:;")
					.side-panel__icon
						img(src="_/uploads/icons/consult.svg", alt="")
					.side-panel__text Получить консультацию
				a.side-panel__item(href="https://wa.me/79175030777" target="_blank")
					.side-panel__icon
						img(src="_/uploads/icons/wh-2.svg", alt="")
					.side-panel__text WhatsApp
			.side-panel__close

	.intro.bg
		.case
			.intro__wrap.row
				.intro__info
					.intro__label оптом и в розницу
					.intro__title.h1 #[h1 #[strong Фанера по низким ценам #[br]с доставкой в день заказа] #[br]по Москве и области]
					.intro__subtitle.h4 со склада производителя #[br]любого сорта и размера
					.intro__act.row
						a.intro__btn.btn.--primary.--img(data-fancybox data-src="#modal-price" href="javascript:;") Узнать стоимость
							.btn__img
								img(src="/_/uploads/price.png" srcset="/_/uploads/price-2x.png 2x", alt="")
						.intro__desc Оставьте заявку и получите точный расчет под ваш объем #[br]#[strong в течение 5 минут]
				.intro__preview
					.intro__img
						img(src="/_/uploads/intro-img.png" srcset="/_/uploads/intro-img-2x.png 2x", alt="")
					.intro__note
						.intro__note-icon
							img(src="_/uploads/icons/check-green.svg", alt="")
						.intro__note-text.t1.tac
							p Наша фанера имеет #[strong все необходимые сертификаты.]
							p Она #[strong абсолютно безопасна] для вашего здоровья
		.intro__bg.bg-img
			picture
				source(srcset="/_/uploads/intro-bg.webp" type="image/webp")
				img(src="/_/uploads/intro-bg.jpg" alt="" loading="lazy")
		.intro__decor
			.intro__decor-item.decor-item
				img(src="_/uploads/decor/decor-1.png", alt="")
			.intro__decor-item.decor-item
				img(src="_/uploads/decor/decor-2.png", alt="")
			.intro__decor-item.decor-item
				img(src="_/uploads/decor/decor-3.png", alt="")

	.pros
		.case
			.pros__list
				.pros__item
					.pros__icon
						img(src="/_/uploads/pros-1.png" srcset="/_/uploads/pros-1-2x.png 2x", alt="")
					.pros__info
						.pros__name.h5 #[h5 Оплата по факту]
						.pros__text Оплачивайте как вам удобно: после получения заказа, либо по предоплате, наличными #[br]или по карте
				.pros__item
					.pros__icon
						img(src="/_/uploads/pros-2.png" srcset="/_/uploads/pros-2-2x.png 2x", alt="")
					.pros__info
						.pros__name.h5 #[h5 Отправка через #[br]1 час после заказа]
						.pros__text Загружаем машину сразу же после заказа, #[br]вы получаете фанеру  в этот же день
				.pros__item
					.pros__icon
						img(src="/_/uploads/pros-3.png" srcset="/_/uploads/pros-3-2x.png 2x", alt="")
					.pros__info
						.pros__name.h5 #[h5 Распил фанеры #[br]по вашим размерам]
						.pros__text Выполняем фрезерную и лазерную резку #[br]фанеры на станках с ЧПУ

	.quiz
		.case
			.quiz__title.h2.tac #[h2 #[strong Рассчитайте стоимость заказа за 1 минуту,] #[br]ответив на 4 простых вопроса]
			.quiz__wrap
			.quiz__decor
				.quiz__decor-item.decor-item
					img(src="_/uploads/decor/decor-4.png", alt="")
				.quiz__decor-item.decor-item
					img(src="_/uploads/decor/decor-5.png", alt="")
		.quiz__decor-bottom.decor-bottom.cover
			img(src="_/uploads/decor/decor-bottom.png", alt="")

	.consult.bg
		.case
			.consult__wrap.row
				.consult__info
					.consult__title.h2 #[h2 ]Не знаете какой вид #[br]фанеры выбрать?
					.consult__subtitle #[h4 Получите #[span.bg-green бесплатную консультацию] #[br]от специалиста с опытом более 10 лет]
					.consult__pros
						.consult__pros-item.h5 #[strong Поможем подобрать] фанеру, которая подходит под вашу задачу лучше всего
						.consult__pros-item.h5 #[strong Расскажем,] как можно сэкономить #[br]и получить скидку на нашу продукцию
						.consult__pros-item.h5 #[strong Рассчитаем точную стоимость] вашего заказа с доставкой до нужного места
				.consult__preview
					.consult__img
						img(src="/_/uploads/manager.png" srcset="/_/uploads/manager-2x.png 2x", alt="")
					.consult__person.tac
						.consult__person-name.h5 Никита Сивков
						.consult__person-duty Менеджер по продажам #[br]Опыт более 10 лет
				.consult__form.form
					.form__title.tac Заполните форму
					.form__subtitle.h5.tac Наш специалист свяжется с вами в течение #[br]5 минут и ответит на все возникшие вопросы
					.form__fields
						.form__field.field.--required.--name
							.field__wrap
								.field__icon
									img(src="_/uploads/icons/person-gray.svg", alt="")
								input.field__area(type="name" name="name" placeholder="Как к вам обращаться*")
						.form__field.field.--required.--tel
							.field__wrap
								.field__icon
									img(src="_/uploads/icons/tel-gray.svg", alt="")
								input.field__area(type="tel" name="tel" placeholder="Ваш телефон*")
					.form__btn.btn.--primary Получить консультацию
					.form__policy.tac Нажимая на кнопку вы соглашаетесь с условиями #[a(href="/politika.pdf" target="_blank").link.inline обработки данных] #[br]и #[a(href="/politika.pdf" target="_blank").link.inline политикой конфиденциальности]
		.consult__bg.bg-img
			picture
				source(srcset="/_/uploads/consult-bg.webp" type="image/webp")
				img(src="/_/uploads/consult-bg.jpg" alt="" loading="lazy")

	.type
		.case
			.type__title.h2.tac #[h2 #[strong Идеально подходит] #[br]для следующих видов работ ]
			.type__list
				mixin type(img, name, text)
					.type__item
						.type__img.cover
							img(src=img, alt="")
						.type__info.tac
							.type__name.h5=name
							.type__text!=text
							a.type__btn.btn.--primary.--md(data-fancybox data-src="#modal-price" href="javascript:;") Рассчитать цену
				+type('_/uploads/type/type-1.jpg', 'Для пола', 'Используется для выравнивания полов под линолеум, паркет <br>или покраску.')
				+type('_/uploads/type/type-2.jpg', 'Для лазерной резки', 'Обладает ровной поверхностью <br>для создания сложных деталей')
				+type('_/uploads/type/type-3.jpg', 'Для потолка', 'Подходит для создания ровной <br>и привлекательной поверхности <br>потолка')
				+type('_/uploads/type/type-4.jpg', 'Для обшивки', ' Эстетичный и прочный облицовочный материал для различных <br>поверхностей')
				+type('_/uploads/type/type-5.jpg', 'Для опалубки', 'Подходит для строительства <br>и формирования опалубочных конструкций')
				+type('_/uploads/type/type-6.jpg', 'Для кровельных работ', 'Обеспечивает защиту кровли от влаги <br>и других внешних воздействий')
				+type('_/uploads/type/type-7.jpg', 'Для лодок', 'Фанера для строительства лодок обладает главным качеством – водостойкостью')
				+type('_/uploads/type/type-8.jpg', 'Для хоз.построек', 'Обладает высокой стойкостью к погодным условиям и обеспечивает долговечность построек')
		.type__decor
			.type__decor-item.decor-item
				img(src="_/uploads/decor/decor-6.png", alt="")
			.type__decor-item.decor-item
				img(src="_/uploads/decor/decor-7.png", alt="")
